<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal">

    <x2charger.fastbatterycharging.quickcharge.widget.progressdialog.ProgressWheel
        android:id="@+id/pb"
        android:layout_width="@dimen/dimen_progressbar"
        android:layout_height="@dimen/dimen_progressbar"
        wheel:matProg_barColor="@color/colorPrimary"
        wheel:matProg_progressIndeterminate="true" />

    <TextView
        android:id="@+id/lbl_msg"
        style="@style/TextView.Regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_2x"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/text_size_20"
        android:visibility="gone" />
</LinearLayout>

