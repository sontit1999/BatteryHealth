<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_200"
    android:background="@drawable/bg_main_light">

    <androidx.cardview.widget.CardView
        android:id="@+id/img_logo_full"
        android:layout_width="@dimen/dimen_120"
        android:layout_height="@dimen/dimen_120"
        android:layout_marginTop="@dimen/dimen_10"
        app:cardCornerRadius="26dp"
        app:layout_constraintBottom_toTopOf="@id/img_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/app_name"
            android:src="@mipmap/icon_app" />
    </androidx.cardview.widget.CardView>

    <com.sh.entertainment.fastcharge.ui.custom.CustomTextView
        android:id="@+id/img_name"
        android:layout_width="@dimen/dimen_200"
        android:layout_height="@dimen/dimen_x4x"
        android:layout_marginVertical="@dimen/dimen_1x"
        android:fontFamily="@font/roboto_regular"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="23sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_logo_full" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btnback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10"
        android:layout_marginEnd="@dimen/dimen_10"
        android:contentDescription="@string/appbar_scrolling_view_behavior"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_back" />
</androidx.constraintlayout.widget.ConstraintLayout>