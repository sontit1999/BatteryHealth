<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frl_custom_notification"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

   <!-- <ImageView
        android:layout_width="@dimen/dimen_x4x"
        android:layout_height="@dimen/dimen_x4x"
        android:visibility="gone"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/_4sdp"
        android:contentDescription="@string/app_name"
        android:src="@mipmap/ic_launcher" />-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_battery"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_2x"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_battery" />

        <TextView
            android:id="@+id/lbl_percentage"
            style="@style/TextAppearance.Compat.Notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_05x"
            android:textSize="@dimen/text_size_12" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/dimen_6x"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_status_charge"
                style="@style/TextAppearance.Compat.Notification.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pin dang duoc sac" />

            <TextView
                android:id="@+id/txtTimeLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time left "
                android:textSize="@dimen/text_size_12" />
        </LinearLayout>

        <TextView
            android:layout_margin="2dp"
            android:layout_width="@dimen/divider"
            android:layout_height="match_parent"
            android:background="@color/dividerColor" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_2x"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_temperature"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/lbl_temperature"
                    style="@style/TextAppearance.Compat.Notification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_05x"
                    android:text="50.6*C/ 65.8*F"
                    android:textSize="11dp"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_marginStart="3dp"
            android:id="@+id/btn_optimize"
            style="@style/TextView.Regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/dimen_50"
            android:layout_gravity="end|center_vertical"
            android:background="@drawable/btn_green_round"
            android:ellipsize="end"
            android:gravity="center"
            android:maxWidth="@dimen/dimen_110"
            android:maxLines="1"
            android:paddingHorizontal="@dimen/dimen_1x"
            android:paddingVertical="@dimen/dimen_1x"
            android:text="@string/optimize"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_14" />

    </LinearLayout>

</FrameLayout>