<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main_light">

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="@dimen/dimen_200"
        android:layout_height="@dimen/dimen_200"
        android:contentDescription="@string/app_name"
        android:src="@drawable/battery_full"
        style="@style/TextView.Italic"
        android:layout_marginBottom="@dimen/dimen_30"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/txt_loading"
        app:layout_constraintVertical_chainStyle="packed" />
    <ImageView
        android:id="@+id/img_app_name"
        android:layout_width="@dimen/dimen_250"
        android:layout_marginHorizontal="@dimen/dimen_30"
        android:layout_height="@dimen/dimen_120"
        android:src="@drawable/img_app_name"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_logo"/>
    <TextView
        android:id="@+id/txt_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_loading"
        android:visibility="invisible"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_16"
        android:layout_marginBottom="@dimen/dimen_10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/progress"/>

    <androidx.core.widget.ContentLoadingProgressBar
        android:id="@+id/progress"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="@dimen/zero"
        android:layout_height="@dimen/dimen_05x"
        android:visibility="invisible"
        android:layout_marginHorizontal="@dimen/dimen_x4x"
        android:layout_marginBottom="@dimen/dimen_30"
        android:progressDrawable="@drawable/bg_progress_loading"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/txt_slogan"/>
    <TextView
        android:id="@+id/txt_slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_user_easy"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_16"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/dimen_30"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
