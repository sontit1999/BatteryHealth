<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:paddingBottom="20dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16sp"
                android:src="@drawable/ic_close"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/avatar"
                android:layout_width="204dp"
                android:layout_height="204dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"
                app:layout_constraintBottom_toTopOf="@id/congratulationTv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ivClose"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/success_animation" />

            <com.sh.entertainment.fastcharge.ui.custom.CustomTextView
                android:id="@+id/congratulationTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal"
                android:text="@string/congratulation_title"
                android:textColor="#59709a"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/titleTv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <com.sh.entertainment.fastcharge.ui.custom.CustomTextView
                android:id="@+id/titleTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:gravity="center"
                android:text="@string/congratulation"
                android:textColor="#80151920"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@id/nativeAdDialog"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <com.sh.entertainment.fastcharge.widget.ads.LayoutNativeAd
                android:id="@+id/nativeAdDialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="@dimen/dimen_10"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="16dp"
                android:paddingStart="18dp"
                android:paddingTop="12dp"
                android:paddingEnd="18dp"
                android:paddingBottom="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/titleTv" />

            <View
                android:id="@+id/bgCooler"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="10dp"
                android:layout_marginEnd="9dp"
                android:background="@drawable/bg_cooler"
                app:layout_constraintDimensionRatio="1:0.45"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/nativeAdDialog"
                app:layout_constraintWidth_percent="0.3" />

            <View
                android:id="@+id/bgBatterySaved"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="10dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/bg_saver"
                app:layout_constraintDimensionRatio="1:0.45"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/bgBooster" />


            <View
                android:id="@+id/bgBooster"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="10dp"
                android:background="@drawable/bg_booster"
                app:layout_constraintDimensionRatio="1:0.45"
                app:layout_constraintEnd_toStartOf="@id/bgBatterySaved"
                app:layout_constraintStart_toEndOf="@id/bgCooler"
                app:layout_constraintTop_toBottomOf="@+id/bgCooler" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivLibrary"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/_15sdp"
                android:src="@drawable/icon_fan"
                app:layout_constraintEnd_toEndOf="@id/bgCooler"
                app:layout_constraintStart_toStartOf="@id/bgCooler"
                app:layout_constraintTop_toTopOf="@id/bgCooler" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="15sp"
                android:gravity="center"
                android:text="@string/cpu_cooler_suggest"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@id/bgCooler"
                app:layout_constraintStart_toStartOf="@id/bgCooler"
                app:layout_constraintTop_toBottomOf="@id/ivLibrary" />


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivCamera"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/icon_rocket"
                app:layout_constraintEnd_toEndOf="@id/bgBooster"
                app:layout_constraintStart_toStartOf="@id/bgBooster"
                app:layout_constraintTop_toTopOf="@id/bgBooster" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="15dp"
                android:gravity="center"
                android:text="@string/booster_suggest"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@id/bgBooster"
                app:layout_constraintStart_toStartOf="@id/bgBooster"
                app:layout_constraintTop_toBottomOf="@id/ivCamera" />


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivSaved"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/icon_battery_saver"
                app:layout_constraintEnd_toEndOf="@id/bgBatterySaved"
                app:layout_constraintStart_toStartOf="@id/bgBatterySaved"
                app:layout_constraintTop_toTopOf="@id/bgBatterySaved" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="15dp"
                android:gravity="center"
                android:text="@string/saver_suggest"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@id/bgBatterySaved"
                app:layout_constraintStart_toStartOf="@id/bgBatterySaved"
                app:layout_constraintTop_toBottomOf="@id/ivSaved" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>
</layout>
