<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--        <item name="android:statusBarColor" tools:targetApi="LOLLIPOP">@color/transparent</item>-->
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/layer_splash</item>
        <!--        <item name="android:statusBarColor" tools:targetApi="LOLLIPOP">@color/transparent</item>-->
        <item name="android:navigationBarColor" tools:targetApi="LOLLIPOP">
            @color/bgMainBottomLight
        </item>
    </style>

    <style name="BoConfirmationTheme" parent="AppTheme">
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:navigationBarColor" tools:targetApi="LOLLIPOP">
            @color/bgMainBottomLight
        </item>
    </style>

    <style name="BoResultTheme" parent="AppTheme">
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:navigationBarColor" tools:targetApi="LOLLIPOP">
            @color/colorAccent
        </item>
    </style>

    <style name="IntroTheme" parent="AppTheme">
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:statusBarColor" tools:targetApi="LOLLIPOP">@color/colorAccent</item>
        <item name="android:navigationBarColor" tools:targetApi="LOLLIPOP">
            @color/colorAccent
        </item>
    </style>
    <!-- End of themes -->

    <!-- Toolbar -->
    <style name="ToolBarStyle">
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="background">@color/transparent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="android:paddingTop">@dimen/dimen_4x</item>-->
        <!--        <item name="android:contentInsetEnd">@dimen/zero</item>-->
        <!--        <item name="contentInsetEnd">@dimen/zero</item>-->
        <!--        <item name="contentInsetEndWithActions">@dimen/zero</item>-->
        <!--        <item name="android:contentInsetStart">@dimen/zero</item>-->
        <!--        <item name="contentInsetStart">@dimen/zero</item>-->
        <item name="contentInsetStartWithNavigation">@dimen/zero</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="TitleTextSmall" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/text_size_17</item>
    </style>

    <style name="TitleTextLarge" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/text_size_18</item>
    </style>

    <style name="ToolBarStyle.SmallTitle">
        <item name="titleTextAppearance">@style/TitleTextSmall</item>
    </style>

    <style name="ToolBarStyle.LargeTitle">
        <item name="titleTextAppearance">@style/TitleTextLarge</item>
    </style>
    <!-- End of Toolbar -->

    <!-- Button styles -->
    <style name="Button" parent="@android:style/Widget.Button">
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingBottom">@dimen/dimen_x1x</item>
        <item name="android:paddingTop">@dimen/dimen_x1x</item>
        <item name="android:paddingLeft">@dimen/dimen_2x</item>
        <item name="android:paddingRight">@dimen/dimen_2x</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="Button.Primary">
        <item name="android:background">@drawable/btn_primary</item>
    </style>

    <style name="Button.Accent">
        <item name="android:background">@drawable/btn_accent</item>
    </style>

    <style name="Button.Grey">
        <item name="android:background">@drawable/btn_grey</item>
    </style>

    <style name="Button.Yellow">
        <item name="android:background">@drawable/btn_yellow</item>
    </style>

    <style name="Button.Green">
        <item name="android:background">@drawable/btn_green</item>
    </style>
    <!-- End of button -->

    <!-- Textview -->
    <style name="TextView" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TextView.Bold">
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="TextView.Medium">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="TextView.quickB">
        <item name="android:fontFamily">@font/quicksand_bold</item>
    </style>

    <style name="TextView.quickL">
        <item name="android:fontFamily">@font/quicksand_light</item>
    </style>

    <style name="TextView.quickM">
        <item name="android:fontFamily">@font/quicksand_medium</item>
    </style>

    <style name="TextView.quickR">
        <item name="android:fontFamily">@font/quicksand_regular</item>
    </style>

    <style name="TextView.quickS">
        <item name="android:fontFamily">@font/quicksand_semi_bold</item>
    </style>

    <style name="SwitchCompatTheme">
        <item name="colorControlActivated">#00BCD4</item>
    </style>

    <style name="TextView.Regular">
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="TextView.Light">
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>

    <style name="TextView.Italic">
        <item name="android:fontFamily">@font/roboto_italic</item>
    </style>
    <!-- End of Textview -->

    <!-- Checkbox -->
    <style name="CheckBoxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:scaleX">1.1</item>
        <item name="android:scaleY">1.1</item>
    </style>
    <!-- End of Checkbox -->

    <!-- Divider -->
    <style name="HorizontalDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider</item>
        <item name="android:background">@color/dividerColor</item>
    </style>
    <!-- End of Divider -->

    <!-- Navigation View -->
    <style name="NavigationDrawerStyle">
        <item name="android:textSize">@dimen/text_size_18</item><!-- text size in menu-->
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:listDivider">@drawable/divider_nav_group</item>
        <item name="itemIconSize">@dimen/dimen_30</item>

        <!-- item size in menu-->
        <!--<item name="android:listPreferredItemHeightSmall">40dp</item>
        <item name="listPreferredItemHeightSmall">40dp</item>-->

        <!-- item padding left in menu-->
        <!--<item name="android:listPreferredItemPaddingLeft">8dp</item>
        <item name="listPreferredItemPaddingLeft">8dp</item>-->

        <!-- item padding right in menu-->
        <!--<item name="android:listPreferredItemPaddingRight">8dp</item>
        <item name="listPreferredItemPaddingRight">8dp</item>-->
    </style>

    <style name="ItemFrameTextRecord">
        <item name="android:layout_marginTop">8.0dip</item>
        <item name="android:layout_marginBottom">8.0dip</item>
    </style>

    <style name="Ripple">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">false</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!-- End of Navigation View -->
</resources>
