<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <padding
                android:bottom="2dp"
                android:top="2dp"
                android:left="3dp"/>
            <corners android:radius="@dimen/dimen_96" />
            <solid android:color="#C8C8C8" />
            <size android:height="@dimen/dimen_3x"/>
        </shape>
    </item>
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <padding
                android:right="1.1dp"
                android:top="2dp"
                android:bottom="2dp"
                />
            <corners android:radius="@dimen/dimen_96" />
            <solid android:color="#0567B4" />
            <size android:height="@dimen/dimen_3x"/>
        </shape>
    </item>
</selector>